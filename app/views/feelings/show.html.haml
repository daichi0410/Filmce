.posts
 .posts__box
  .posts__box__left
   - @feeling.movies.each do |movie|
    .posts__box__left__name
     = movie.user.name
  .posts__box__right
   - @feeling.movies.each do |movie|
    .posts__box__right__content
     = movie.name

  .posts__box__form
   = form_for @movie, url: movies_path, method: :post do |movies_form|
    = movies_form.label :name, "Movie title"
    = movies_form.text_field :name
    = movies_form.label :image, "Movie Poster"
    = movies_form.text_field :image
    = movies_form.label :text, "Detail comment"
    = movies_form.text_field :text
    = movies_form.select :feeling_id,[["HeartBreak?","1"],["Study?","2"],["Technology?","3"],["Adventurous?","4"],["Scary?","5"],["Surprise?","6"]], :prompt => "Current Feeling?"
    = movies_form.submit "Submit"


