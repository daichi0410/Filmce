.header
 .header__menu
  .header__menu__home 
   =link_to root_path, class:"header___menu__home__btn" do
    Home
  .header__menu__movies 
   =link_to "#", class:"header__menu__movies__btn" do
    Movies
  .header__menu__register 
   =link_to new_user_registration_path, class:"header__menu__register__btn" do
    Register
  .header__menu__login 
   =link_to new_user_session_path, class:"header__menu__login__btn" do
    Log in
  .header__menu__contact 
   =link_to new_feeling_path, class:"header__menu__contact__btn" do
    Post

 .header__user
  - if user_signed_in?
   .header__user__name
    = link_to current_user.name , user_path(current_user)
   .header__user__edit
    = link_to edit_user_path(current_user) do
     = icon('fas', 'cog', class: 'icon')



.posts
 - @movie.each do |movie|
  .posts__box
   .posts__box__name
    = movie.name
   .posts__box__image
    = image_tag movie.image.to_s
   .posts__box__comment
    = movie.text
   .posts__box__user
    = movie.user.name


