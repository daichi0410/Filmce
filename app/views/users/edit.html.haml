.header
 .header__menu
  .header__menu__home 
   =link_to root_path, class:"header___menu__home__btn" do
    Home
  .header__menu__movies 
   =link_to "#", class:"header__menu__movies__btn" do
    Movies
  .header__menu__register 
   =link_to new_user_registration_path, class:"header__menu__register__btn" do
    Register
  .header__menu__login 
   =link_to new_user_session_path, class:"header__menu__login__btn" do
    Log in
  .header__menu__contact 
   =link_to "#", class:"header__menu__contact__btn" do
    Contact

 .header__user
  .header__user__name
   = current_user.name
  .header__user__edit
   = link_to edit_user_path(current_user) do
    = icon('fas', 'cog', class: 'icon')
    
.account-page
 .account-page__inner
  .account-page__inner__top
   .account-page__inner__top__s1      
    %h2 Edit Account
    = link_to "Log out", destroy_user_session_path, method: :delete, class: 'btn'
    = link_to "Home", root_path, class: 'btn'
   .account-page__inner__under
    = form_for(current_user) do |f|
     .field
      .field-label
       = f.label :name
      .field-input
       = f.text_field :name, autofocus: true
     .field
      .field-label
       = f.label :email
      .field-input
       = f.email_field :email
     .actions
      = f.submit "Update", class: 'actions__btn'

      
.footer
